@page "/login"
@inject NavigationManager NavigationManager

<h1>Login</h1>

@if (showError)
{
    <p class="text-danger">Invalid login attempt</p>
}

<form>
    <div class="form-group">
        <label for="username">Username:</label>
        <input type="text" class="form-control" id="username" @bind="username" />
    </div>
    <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" class="form-control" id="password" @bind="password" />
    </div>
    <button type="button" class="btn btn-primary" @onclick="Login">Login</button>
</form>

@code {
    private string username;
    private string password;
    private bool showError;

    private void Login()
    {
        // Check username and password and navigate to the appropriate page
        if (username == "admin" && password == "password")
        {
            NavigationManager.NavigateTo("/admin");
        }
        else if (username == "manager" && password == "password")
        {
            NavigationManager.NavigateTo("/manager");
        }
        else if (username == "employee" && password == "password")
        {
            NavigationManager.NavigateTo("/employee");
        }
        else
        {
            showError = true;
        }
    }
}
