@using CoffeeShop.MVC.Models.Customer;

@model CustomerDeleteDto

@{
    ViewData["Title"] = "Delete Customer";
}

<h1 class="mt-4 mb-4">@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Code)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Code)</dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Description)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>
    </dl>

    <p class="text-danger">Are you sure you want to delete this?</p>

    <form asp-action="Delete" class="mb-3">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />

    </form>

    <a asp-action="Index">Back</a>

</div>