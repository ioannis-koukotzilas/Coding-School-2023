@using CoffeeShop.MVC.Models.Employee;

@model EmployeeDeleteDto

@{
    ViewData["Title"] = "Delete Employee";
}

<h1 class="mt-4 mb-4">@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Surname)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Surname)</dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.SalaryPerMonth)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.SalaryPerMonth)</dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.EmployeeType)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.EmployeeType)</dd>
    </dl>

    <p class="text-danger">Are you sure you want to delete this?</p>

    <form asp-action="Delete" class="mb-3">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />

    </form>

    <a asp-action="Index">Back</a>

</div>