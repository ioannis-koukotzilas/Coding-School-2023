@model IEnumerable<CoffeeShop.Models.Employee>

@{
    ViewData["Title"] = "Employee";
}

<h1 class="mt-4 mb-4">@ViewData["Title"] List</h1>

<table class="table mb-3">

    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Surname)</th>
            <th>@Html.DisplayNameFor(model => model.SalaryPerMonth)</th>
            <th>@Html.DisplayNameFor(model => model.EmployeeType)</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Surname)</td>
                <td>@Html.DisplayFor(modelItem => item.SalaryPerMonth)</td>
                <td>@Html.DisplayFor(modelItem => item.EmployeeType)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>

        }

    </tbody>

</table>

<a class="btn btn-primary" asp-action="Create">Add new</a>