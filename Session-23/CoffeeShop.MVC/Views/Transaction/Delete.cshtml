@using CoffeeShop.MVC.Models.Transaction;

@model TransactionDeleteDto

@{
    ViewData["Title"] = "Delete Transaction";
}

<h1 class="mt-4 mb-4">@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Date)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Date)</dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CustomerId)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CustomerId)</dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.EmployeeId)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.EmployeeId)</dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.PaymentMethod)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.PaymentMethod)</dd>
    </dl>

    <p class="text-danger">Are you sure you want to delete this?</p>

    <form asp-action="Delete" class="mb-3">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />

    </form>

    <a asp-action="Index">Back</a>

</div>