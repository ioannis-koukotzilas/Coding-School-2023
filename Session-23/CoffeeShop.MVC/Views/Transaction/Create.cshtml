@using CoffeeShop.MVC.Models.Transaction;
@using CoffeeShop.Models.Enums;

@model TransactionCreateDto

@{
    ViewData["Title"] = "Add New Transaction";

}

<h1 class="mt-4 mb-4">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Date" class="control-label mb-1"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class="form-select" asp-items="Model.CustomerList"></select>
            </div>
            <div class="form-group mb-3">
                <label asp-for="EmployeeId" class="control-label"></label>
                <select asp-for="EmployeeId" class="form-select" asp-items="Model.EmployeeList"></select>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PaymentMethod" class="control-label mb-1"></label>
                <select asp-for="PaymentMethod" class="form-select" asp-items="Html.GetEnumSelectList<PaymentMethodEnum>()"></select>
                <span asp-validation-for="PaymentMethod" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<a asp-action="Index">Back</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}